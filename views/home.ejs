<%- include('../views/partials/header') %>


<form action="/posts" method="POST">
<div>
    <input class="status" type="text" name="text" value="TELL US A JOKE">
</div> 
<div class="newPost">
    <button id="post" type="submit">POST</button> 
</div> 
</form>
<div class="displayPosts">
    <% posts.forEach(function(p) { %>
        <h3><%= p.text %></h3>
        <div><%= p.createdBy.name %></div>
        <div><%= p.createdAt %></div>
       <a id="see-more" href="/posts/<%= p.id %>/details">See More</a>
        <form action="/posts/<%=p.id%>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
   <% }) %>
</div>

                    
<%- include('../views/partials/footer') %>
                        